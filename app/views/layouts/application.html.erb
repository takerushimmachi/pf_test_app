<!DOCTYPE html>
<html>
  <head>
    <title>Suicom</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" ><%= link_to 'Suicom', root_path %></a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">
      <% if user_signed_in? %>
      <li class="nav-item">
        <div class="nav-link"><%= link_to 'マイページ', users_path %></div>
      <li class="nav-item">
        <div class="nav-link"><%= link_to 'ログアウト', destroy_user_session_path %></div>
      <% else %>
      </li>
      <li class="nav-item">
        <div class="nav-link"><%= link_to 'ログイン', user_session_path %></div>
      </li>
      <li class="nav-item">
        <div class="nav-link"><%= link_to '新規登録', new_user_registration_path %></div>
      </li>
      <% end %>
    </ul>
  </div>
</nav>
    <%= yield %>
  </body>
</html>
